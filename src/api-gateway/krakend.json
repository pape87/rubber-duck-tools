{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {},
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "name": "rubber-duck-tools",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/v1/login",
      "input_query_strings": [
        "code"
      ],
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/auth/getToken",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://auth-service:3000"
          ]
        }
      ]
    },
    {
      "endpoint": "/protected",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "https://cognito-idp.eu-central-1.amazonaws.com/eu-central-1_mlQ7gDO7y/.well-known/jwks.json",
          "operation_debug": true,
          "key_identify_strategy": "kid"
        }
      },
      "backend": [
        {
          "host": [
            "http://localhost:8080"
          ],
          "url_pattern": "/__health"
        }
      ]
    },
    {
      "endpoint": "/preferences",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "https://cognito-idp.eu-central-1.amazonaws.com/eu-central-1_mlQ7gDO7y/.well-known/jwks.json",
          "operation_debug": true,
          "key_identify_strategy": "kid"
        }
      },
      "backend": [
        {
          "host": [
            "http://user-service:3000"
          ],
          "url_pattern": "/preference/{JWT.sub}",
          "method": "GET",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/preferences",
      "method": "POST",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "https://cognito-idp.eu-central-1.amazonaws.com/eu-central-1_mlQ7gDO7y/.well-known/jwks.json",
          "operation_debug": true,
          "key_identify_strategy": "kid"
        }
      },
      "backend": [
        {
          "host": [
            "http://user-service:3000"
          ],
          "url_pattern": "/preference/{JWT.sub}",
          "method": "POST",
          "encoding": "json"
        }
      ]
    }
  ]
}